encoding = '# -*- coding: ascii -*-'
SYMBOLS = 'АБВГДЕЁЖЗИЙКЛМНОПКРСТУФХЦЧЩШЫЬЪЭЮЯабвгдеёжзийлмнопкрстуфхцчщшыьъэюя'
MAX_KEY_SIZE = len(SYMBOLS)

def getMode():
    while True:
        print('Сиз расшифровка киласизми ё зашифровка ё бузишми?')
        mode = input().lower()
        if mode in ('зашифровка', 'з', 'расшифровка', 'р', 'бузиш', 'б'):
            return mфode
        else:
            print('зашифровка, з, расшифровка, р, бузиш, б - шулардан бирини киритинг!')
            
def getMessage():
    print('Текстни киритинг, илтимос')
    return input()

def getKey():
    key = 0
    while True:
        print('Shifrovka kalitini kiriting: (1 - %s)' % (MAX_KEY_SIZE))
        key = int(input())
        if (key >= 1 and key <= MAX_KEY_SIZE):
            return key

def getTranslateMessage(mode, message, key):
    if mode[0] == 'р':
        key = -key
    translated = ''    

    for symbol in message:
        symbolIndex = SYMBOLS.find(symbol)
        if symbolIndex == -1:
            translated += symbol
        else:
            symbolIndex += key
            if symbolIndex >= len(SYMBOLS):
                symbolIndex -= len(SYMBOLS)
            elif symbolIndex < 0:
                symbolIndex += len(SYMBOLS)
            translated += SYMBOLS[symbolIndex]
    return translated

mode = getMode()
message = getMessage()
if mode[0] != 'б':
    key = getKey()
print('Tuslangan tekst: ')
if mode[0] != 'б':
    print(getTranslateMessage(mode, message, key))
else:
    for key in range(1, MAX_KEY_SIZE + 1):
        print(key, getTranslateMessage('расшифровка', message, key))
